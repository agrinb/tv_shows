<h3>Characters for <%= @television_show.title %> </h3>

<%= form_for [@television_show, @character] do |f| %>

  <% if @actor.errors.any? %>
    <ul>
      <% @actor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :character %>
    <%= f.text_field :character %>

    <%= f.fields_for @actor do |actor| %>
      <p>
        <%= actor.label :name %>
        <%= actor.text_field :name %>
      </p>
    <% end %>
  </div>


  <%= f.submit 'Submit' %>
<% end %>
